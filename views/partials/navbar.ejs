<!-- Navbar -->
<header class="fixed top-0 left-0 right-0 z-50 bg-black text-white px-4 py-6 lg:py-8 flex items-center justify-between">
    <div class="flex items-center">
        <button id="menu-toggle" class="text-xl text-white focus:outline-none">
            <i id="menu-icon" class="fas fa-bars transition-transform duration-300"></i>
        </button>
    </div>
    <div class="flex-grow flex justify-center">
        <a href="/">
            <img src="/Esportive%20Web/assets/navbar/logo.png" alt="Esportive Logo" class="h-8 lg:h-10">
        </a>
    </div>
    <div class="flex items-center relative">
        <% if (typeof user !== 'undefined' && user) { %>
        <div class="relative">
            <button id="profile-toggle" class="flex items-center space-x-2 focus:outline-none">
                <% if (user.photoURL) { %>
                <img src="<%= user.photoURL %>" alt="Profile" class="h-8 w-8 rounded-full border-2 border-red-600">
                <% } else { %>
                <i class="fas fa-user-circle text-2xl text-white"></i>
                <% } %>
            </button>
            
            <div id="profile-dropdown" class="absolute right-0 top-10 mt-2 w-48 bg-gray-800 rounded-md shadow-lg py-1 hidden">
                <div class="px-4 py-2 text-sm text-white border-b border-gray-700">
                    <div class="font-medium"><%= user.name %></div>
                    <div class="text-gray-400"><%= user.email %></div>
                </div>
                <a href="/tournaments" class="block px-4 py-2 text-sm text-white hover:bg-gray-700">
                    <i class="fas fa-trophy mr-2"></i>Tournaments
                </a>
                <a href="/publish-tournament" class="block px-4 py-2 text-sm text-white hover:bg-gray-700">
                    <i class="fas fa-plus mr-2"></i>Publish Tournament
                </a>
                <button onclick="logout()" class="w-full text-left block px-4 py-2 text-sm text-white hover:bg-gray-700">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </button>
            </div>
        </div>
        <% } else { %>
        <a href="/login" class="text-2xl text-white focus:outline-none">
            <i class="fas fa-user-circle"></i>
        </a>
        <% } %>
    </div>
</header>

<!-- Full-screen Side Menu -->
<div id="sidebar" class="fixed top-0 left-0 h-full bg-black z-40 sidebar pt-24">
    <div class="flex flex-col h-full p-8 text-white">
        <ul>
            <li class="mb-2">
                <a href="mailto:support@esportive.in" class="text-xl font-semibold block py-2 hover:text-gray-400">Contact Us</a>
            </li>
            <li class="mb-2">
                <a href="mailto:work@esportive.in" class="text-xl font-semibold block py-2 hover:text-gray-400">Work With Us</a>
            </li>
            <li class="mb-2">
                <button id="socials-toggle" class="text-xl font-semibold w-full text-left py-2 flex items-center justify-between hover:text-gray-400">
                    Our Socials
                    <i class="fas fa-chevron-down text-base transition-transform duration-300"></i>
                </button>
                <ul id="social-links" class="pl-4 mt-1 hidden space-y-2">
                    <li><a href="https://instagram.com" class="text-base block hover:text-gray-400" target="_blank" rel="noopener noreferrer">Instagram</a></li>
                    <li><a href="https://discord.com" class="text-base block hover:text-gray-400" target="_blank" rel="noopener noreferrer">Discord</a></li>
                    <li><a href="https://youtube.com" class="text-base block hover:text-gray-400" target="_blank" rel="noopener noreferrer">YouTube</a></li>
                    <li><a href="https://x.com" class="text-base block hover:text-gray-400" target="_blank" rel="noopener noreferrer">X</a></li>
                    <li><a href="#" class="text-base block hover:text-gray-400">WhatsApp Channel</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>