<div>
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <div class="relative container mx-auto p-8 pt-24 min-h-[400px] flex items-center justify-center bg-gray-900 bg-cover bg-center rounded-lg shadow-lg"
         style="background-image: url('https://cdn.discordapp.com/attachments/1104103276703658087/1419828076585418753/Red_and_White_Futuristic_Esport_Game_Presentation_20250923_045805_0000_edit_157421879103998.png?ex=68d32d70&is=68d1dbf0&hm=3aca3539e7a12be0085f68458b1dcca545dd3269cceeee6469a29706166e676d&');">
        <div class="z-10 bg-black bg-opacity-70 p-6 rounded-lg text-center flex flex-col items-center">
            <div class="flex items-center space-x-2">
                <div class="w-1.5 h-6 bg-red-600"></div>
                <h1 class="text-xl font-bold whitespace-nowrap">Find Tournaments.</h1>
            </div>
            <p class="mt-4 text-gray-300 text-sm max-w-2xl">Esportive is india's e-sports tournament finder. Simply browser, choose and register externally.</p>
            <% if (typeof user !== 'undefined' && user) { %>
            <a href="/tournaments" class="mt-8 px-4 py-2 text-white border-2 border-red-600 rounded-full transition-all duration-300 hover:bg-red-600">
                Browse Tournaments
            </a>
            <% } else { %>
            <a href="/login" class="mt-8 px-4 py-2 text-white border-2 border-red-600 rounded-full transition-all duration-300 hover:bg-red-600">
                Sign in To Browse
            </a>
            <% } %>
        </div>
    </div>

    <!-- Featured Tournaments Section -->
    <div class="container mx-auto p-8">
        <div class="flex flex-col items-start">
            <div class="flex items-center space-x-2 mb-6">
                <div class="w-1.5 h-6 bg-red-600"></div>
                <h2 class="text-xl font-bold whitespace-nowrap">Featured Tournaments</h2>
            </div>
        </div>
        <div id="tournaments-container" class="mt-4 flex overflow-x-auto gap-4 py-2">
            <!-- Tournament cards will be inserted here by JavaScript -->
            <div class="text-gray-400 animate-pulse">Loading featured tournaments...</div>
        </div>
    </div>
    
    <!-- Supported Games Section -->
    <div class="container mx-auto p-8">
        <div class="flex flex-col items-start">
            <div class="flex items-center space-x-2 mb-6">
                <div class="w-1.5 h-6 bg-red-600"></div>
                <h2 class="text-xl font-bold whitespace-nowrap">Supported Games</h2>
            </div>
        </div>
        <div class="mt-4 grid grid-cols-4 gap-2 justify-items-center">
            <img src="/Esportive%20Web/assets/games/bgmi.png" alt="BGMI" class="w-full h-24 object-contain">
            <img src="/Esportive%20Web/assets/games/codm.png" alt="CODM" class="w-full h-24 object-contain">
            <img src="/Esportive%20Web/assets/games/freefire.png" alt="Free Fire" class="w-full h-24 object-contain">
            <img src="/Esportive%20Web/assets/games/coc.png" alt="Clash of Clans" class="w-full h-24 object-contain">
            <img src="/Esportive%20Web/assets/games/brawl_stars.png" alt="Brawl Stars" class="w-full h-24 object-contain">
            <img src="/Esportive%20Web/assets/games/pokemon_unite.png" alt="Pokemon Unite" class="w-full h-24 object-contain">
            <img src="/Esportive%20Web/assets/games/clash_royale.png" alt="Clash Royale" class="w-full h-24 object-contain">
        </div>
    </div>
    
    <!-- Esportive Feed Section -->
    <div class="container mx-auto p-8">
        <div class="flex flex-col items-start">
            <div class="flex items-center space-x-2 mb-6">
                <div class="w-1.5 h-6 bg-red-600"></div>
                <h2 class="text-xl font-bold whitespace-nowrap">Esportive Feed</h2>
            </div>
        </div>
        <!-- The video container now uses a grid layout on medium and larger screens -->
        <div id="videos-container" class="mt-4 flex overflow-x-auto gap-4 py-2 md:grid md:grid-cols-2 md:gap-4 lg:grid-cols-3 xl:grid-cols-4 md:overflow-visible">
            <div class="text-gray-400 animate-pulse">Loading latest videos...</div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<!-- Cookie Consent Pop-up -->
<div id="cookie-consent" class="fixed bottom-0 left-0 right-0 p-4 z-50 bg-gray-900 text-white text-center shadow-lg rounded-t-lg hidden">
    <div class="container mx-auto flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0 md:space-x-6">
        <p class="text-sm">We use cookies to improve your experience. By continuing, you agree to our <a href="/pages/cookie-policy" class="text-red-600 hover:underline">Cookie Policy</a>.</p>
        <div class="flex space-x-2">
            <button id="accept-cookies" class="bg-red-600 text-white px-4 py-2 rounded-full text-sm hover:bg-red-700 transition-colors">Accept</button>
            <button id="decline-cookies" class="border border-red-600 text-red-600 px-4 py-2 rounded-full text-sm hover:bg-red-600 hover:text-white transition-colors">Decline</button>
        </div>
    </div>
</div>